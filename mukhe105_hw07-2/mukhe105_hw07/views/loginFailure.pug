doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    link(rel='stylesheet', type='text/css', href='/views/css/style.css')
    title Login Error
    style(type='text/css').
      .jumbotron { text-align: center; }
  body
    .jumbotron(style='background: DarkSeaGreen !important')
      h1 Login Page
      p Please enter your user name and password. Both are case sensitive.
      br
      br
    .container.mb-5(style='background: lightcoral; ')
      p(style='color: red')
        b Invalid credentials. Please try again!
    .container.mb-5
      form#loginForm(name='login', method='POST', action='/processLogin')
        label(for='username') User:
        br
        input#username(type='text', name='username', placeholder='Username', required='')
        br
        br
        label(for='password') Password:
        br
        input#password(type='password', name='password', placeholder='Password', required='')
        br
        br
        button.btn.btn-block.btn-primary(type='submit') Submit
      br
      a(href='/createAccount')
        span.btn.btn-block.btn-info Create Account        